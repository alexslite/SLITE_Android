<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data class=".LightsSectionHeaderBinding">

        <variable
            name="sectionHeader"
            type="com.sliteptyltd.slite.feature.lights.adapter.data.LightsListItem.SectionHeader" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/sectionDropdownBtn"
            style="?actionButtonStyle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dropdown_caret"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/Body"
            lightsSectionSize="@{sectionHeader.sectionSize}"
            lightsSectionType="@{sectionHeader.type}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/lights_list_section_header_text_color"
            tools:text="Individual (4)" />
    </LinearLayout>
</layout>