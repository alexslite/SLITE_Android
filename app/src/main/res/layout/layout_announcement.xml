<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/announcementContainerFL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/announcement_container_padding"
    tools:background="@drawable/bg_announcement_success">

    <TextView
        android:id="@+id/announcementTextTv"
        style="@style/Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_delta"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/announcement_success_text_color"
        tools:text="@string/scenes_creation_success_message" />
</FrameLayout>