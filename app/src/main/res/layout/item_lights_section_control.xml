<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class=".LightsSectionControlItemBinding" />

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/lights_list_item_margin_vertical"
        android:background="@drawable/bg_light_item">

        <ImageButton
            android:id="@+id/turnOnBtn"
            style="?actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/lights_list_section_control_power_button_margin_vertical"
            android:layout_marginStart="@dimen/horizontal_guideline"
            android:background="@drawable/bg_power_button"
            android:backgroundTint="@color/lights_list_section_control_power_button_on_color"
            android:foreground="@drawable/ripple_lights_power_button"
            android:src="@drawable/ic_power"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_guideline"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/lights_list_section_control_power_button_on_text"
            app:layout_constraintBottom_toBottomOf="@id/turnOnBtn"
            app:layout_constraintEnd_toStartOf="@id/guidelineMiddle"
            app:layout_constraintStart_toEndOf="@id/turnOnBtn"
            app:layout_constraintTop_toTopOf="@id/turnOnBtn" />

        <ImageButton
            android:id="@+id/turnOffBtn"
            style="?actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/lights_list_section_control_power_button_margin_vertical"
            android:layout_marginStart="@dimen/horizontal_guideline"
            android:background="@drawable/bg_power_button"
            android:backgroundTint="@color/lights_list_section_control_power_button_off_color"
            android:foreground="@drawable/ripple_lights_power_button"
            android:src="@drawable/ic_power"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guidelineMiddle"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_guideline"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/lights_list_section_control_power_button_off_text"
            app:layout_constraintBottom_toBottomOf="@id/turnOnBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/turnOffBtn"
            app:layout_constraintTop_toTopOf="@id/turnOnBtn" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>